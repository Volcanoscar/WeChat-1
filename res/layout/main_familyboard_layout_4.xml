<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.tcl.wechat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/main_familyboard_bg_4">
        <TextView 
            android:id="@+id/tv_familboard_msg4"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:background="#45F0F0F0"
            android:maxLines="6"
            android:text="晚上随便吃点什么都不错!"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:rotation="-13"/>
    </RelativeLayout>
    
     <com.tcl.wechat.view.UserInfoView
		android:id="@+id/uv_familboard_userinfo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        custom:textTitle="HHAH"
        custom:textSize="16sp"
        custom:textColor="#ff000000"
        custom:textBackground="@drawable/big_head_word"
        custom:imageSrc="@drawable/big_head"
        custom:imageScaleType="center"
        android:rotation="-12"/>
     
     <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/clip_5"
        android:contentDescription="@string/contentDesc"/>
     
     <Button 
         android:id="@+id/btn_familyborad_replay4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="460dp"
         android:background="@drawable/familyborad_reply4_selector"
         android:onClick="onBtnReplyClick"/>
    
    <TextView 
        android:id="@+id/btn_familyborad_time4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="17:52"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:rotation="-13"/>
</RelativeLayout>
