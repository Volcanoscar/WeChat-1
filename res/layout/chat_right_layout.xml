<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-50dp"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_85"
        android:background="@drawable/chat_right_bg"
        android:rotation="-4">
        <TextView 
            android:id="@+id/tv_right_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_marginTop="@dimen/dp_125"
            android:layout_marginLeft="@dimen/dp_112"
            android:gravity="center"
            android:background="#45F0F0F0"
            android:textColor="@color/black"
            android:text="@string/no_message"
            android:textSize="22sp"
            android:rotation="13"/>
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_300"
        android:src="@drawable/chat_clip_right"
        android:contentDescription="@string/contentDesc"/>
    
    <Button 
        android:id="@+id/btn_msg_right_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_550"
        android:background="@drawable/msg_reply_selector"
        android:onClick="msgReplyRightClick"
        android:rotation="2"/>

</RelativeLayout>
