<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.tcl.wechat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left">
    
 	<com.tcl.wechat.view.UserInfoView 
		android:id="@+id/uv_personal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        custom:textBackground="@drawable/big_head_word"
    	custom:imageSrc="@drawable/big_head"
    	custom:imageScaleType="center"/>
    <TextView 
        android:id="@+id/tv_personal_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/uv_personal_icon"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:text="昵称:Rex"
        android:textColor="#ffffffff"
        android:textSize="28sp"/>
    <TextView
        android:id="@+id/tv_personal_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/uv_personal_icon"
        android:layout_below="@id/tv_personal_nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:text="账号：rex.lei@tcl.com"
        android:textColor="#65ffffff"
        android:textSize="22sp"/>
</RelativeLayout>
