<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4571C671"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10" >

    <TextView
        android:id="@+id/tv_mseeage_time"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/layout_msg_info"
        android:layout_width="@dimen/dp_450"
        android:layout_height="@dimen/dp_320"
        android:layout_gravity="left"
        android:gravity="left|center_vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/msg_location" 
            android:background="@drawable/chatfrom_bg"
			android:contentDescription="@string/contentDesc"/>

        <TextView
            android:id="@+id/tv_location_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_30"
        	android:layout_marginRight="@dimen/dp_15"
        	android:layout_marginBottom="@dimen/dp_20"
            android:background="#67CCCCCC"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>