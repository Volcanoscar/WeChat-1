<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View 
	    android:id="@+id/view_chat_anim_view"
	    android:layout_width="@dimen/dp_40"
	    android:layout_height="@dimen/dp_40"
	    android:layout_centerInParent="true"
	    android:background="@drawable/voice_left"/>
    
    <ImageButton
    	android:id="@+id/imgbtn_msgboard_voice"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="@dimen/dp_20"
    	android:layout_marginRight="@dimen/dp_20"
    	android:layout_centerInParent="true"
    	android:background="@drawable/msg_sound_selector"
    	android:contentDescription="@string/contentDesc"/>
    
    <TextView 
        android:id="@+id/tv_voice_palytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/imgbtn_msgboard_voice"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>
    
</RelativeLayout>
