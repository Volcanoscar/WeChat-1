<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcl.wechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.REORDER_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" /> 
	
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
	<uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <!-- 判断当前应用是否在前台 -->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    
    <!-- 悬浮窗(FloatingService) permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <instrumentation 
        android:name="android.test.InstrumentationTestRunner" 
        android:targetPackage="com.tcl.wechat"></instrumentation>

    <application
        android:name=".WeChatApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- 主界面 -->
        <activity
            android:name="com.tcl.wechat.ui.activity.LoginActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<action android:name="android.intent.action.DELETE"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!--**********************************************************
        						Activity注册位置
         **********************************************************-->
        <!-- 用户信息显示界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.PersonalInfoActivity"
            android:theme="@android:style/Theme.Translucent"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden"/>
        <!-- 好友信息显示界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.FriendInfoActivity"
            android:theme="@android:style/Theme.Translucent"/>
        <!-- 聊天界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.ChatActivity"
            android:theme="@android:style/Theme.Translucent"
            android:launchMode="singleInstance"/>
        <!-- 联系人列表界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.FriendListActivity"
            android:theme="@android:style/Theme.Translucent"/>
        <!-- 登录界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.MainActivity"
            android:theme="@android:style/Theme.Translucent"/>
        <!-- 用户注册界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.RegisterActivity"
            android:theme="@android:style/Theme.Translucent"/>
        <!-- 添加好友界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.AddFriendActivity"
            android:theme="@android:style/Theme.Translucent"/>
        <!-- 视频播放界面 -->
        <activity android:name="com.tcl.wechat.ui.activity.VideoPlayerActivity"
            android:theme="@style/PlayerViewStyle"/>
        
        
        <!--**********************************************************
        						服务注册位置
        **********************************************************-->
        <service android:name="com.tcl.wechat.xmpp.WeiXmppService" >
            <intent-filter>
                <action android:name="com.tcl.webchat.xmpp.WeiXmppService" />
            </intent-filter>
        </service>
        
        
        <!--**********************************************************
        						广播接收器注册位置
         **********************************************************-->
        <!-- appWidget -->
        <receiver 
            android:name="com.tcl.wechat.widget.WeChatWidget"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher">
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data 
                android:name="android.appwidget.provider"
                android:resource="@xml/layout_appwidget" />
        </receiver>
        
        <!-- 启动应用消息接收器 -->
        <receiver
            android:name="com.tcl.wechat.receiver.StartAppReceiver">
            <intent-filter >
                <action android:name="com.tcl.action.MAINVIEW"/>
                <action android:name="com.tcl.action.USERINFO"/>
                <action android:name="com.tcl.action.PLAYVIEW"/>
                <action android:name="com.tcl.action.CHATVIEW"/>
            </intent-filter>
        </receiver>
        
        <!-- 媒体播放类接收器 -->
        <receiver 
            android:name="com.tcl.wechat.receiver.MediaActionReceiver">
            <intent-filter >
                <action android:name="com.tcl.action.play.video"/>
                <action android:name="com.tcl.action.play.sound"/>
                <action android:name="com.tcl.action.show.pic"/>
            </intent-filter>
        </receiver>
        
        <!-- 网络链接监听器 -->
        <receiver android:name="com.tcl.wechat.receiver.ConnectionChangeReceiver"   
             android:label="NetworkConnection">   
      		<intent-filter>   
          		<action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>   
      		</intent-filter>   
  		</receiver> 
  		
        <!-- 获取微信消息接收器 -->
        <receiver android:name="com.tcl.wechat.receiver.WeiXinMsgReceiver" >
            <intent-filter>
                <action android:name="com.tcl.wechat.ACTION_RECEIVE_WEIXIN_MSG" />
            </intent-filter>
        </receiver> 
        
        <receiver android:name="com.tcl.wechat.receiver.WeiXinNoticeReceiver" >
            <intent-filter>
                <action android:name="com.tcl.wechat.ACTION_RECEIVE_WEIXIN_NOTICE" />
            </intent-filter>
        </receiver> 
        
        <receiver android:name="com.tcl.wechat.receiver.WeiXinRemoteBindReceiver" >
            <intent-filter>
                <action android:name="com.tcl.wechat.ACTION_REMOTEBINDER"/>
            </intent-filter>
        </receiver> 
        
        <receiver android:name="com.tcl.wechat.receiver.WeiXinControlReceiver" >
            <intent-filter>
                <action android:name="com.tcl.wechat.ACTION_WEIXIN_CONTROL" />
            </intent-filter>
        </receiver> 
        
        <receiver android:name="com.tcl.wechat.receiver.WeiXinLoginReceiver" >
            <intent-filter>
                <action android:name="com.tcl.wechat.ACTION_LOGIN_SUCCESS"/>
            </intent-filter>
        </receiver> 
        
        <receiver android:name="com.tcl.wechat.receiver.GetWeiXinAppReceiver" >
            <intent-filter>
                <action android:name="com.tcl.wechat.ACTION_GET_WEIXIN_APP" />
            </intent-filter>
        </receiver> 
        
        <receiver android:name="com.tcl.wechat.receiver.OthersAppExitQRPageReceiver" >
            <intent-filter>
                <action android:name="com.tcl.webchat.OthersAppExitQRPage" />
            </intent-filter>
        </receiver> 
        
        <uses-library android:name="android.test.runner"/>
    </application>

</manifest>
